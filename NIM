from random import randint

def main() :
    # Variables
    ballCount = 0
    playerTurn = 0
    computerMode = 0

    # Process
    playerTurn = randint(0, 1)
    ballCount = randint(10, 100)
    computerMode = randint(0, 1)

    print("The initial ball count is ... ", ballCount)

    while ballCount > 1:
        if playerTurn == 0:
            if computerMode == 1:
                print("Computer mode: Dumb")
                ballTaken = computerDumbMode(ballCount)
                print("Computer takes ... ", ballTaken)
                ballCount = ballCount - ballTaken
                print("The new ball count is... ", ballCount)
                playerTurn = 1
            else:
                print("Computer mode: Smart")
                ballTaken = computerSmartMode(ballCount)
                print("Computer takes... ", ballTaken)
                ballCount = ballCount - ballTaken
                print("The new ball count is... ", ballCount)
                playerTurn = 1
        else:
            print("Player's turn..")
            ballCount = ballCount - int(input("Player, how many balls you want to remove... "))
            print("The new ball count is... ", ballCount)
            playerTurn = 0
    #output
    if playerTurn == 1:
        print("Computer Won")
    else:
        print("Player won")


def computerDumbMode(ballCount):
    if ballCount % 2 == 0:
        value = randint(1, ballCount / 2)
    else:
        value = randint(1, (ballCount - 1) / 2)
    return value

def computerSmartMode(ballCount):
    if ballCount > 63:
        value = ballCount - 63
    if ballCount == 63:
        value = 32
    if 31 < ballCount < 63:
        value = ballCount - 31
    if ballCount == 31:
        value = 16
    if 15 < ballCount < 31:
        value = ballCount - 15
    if ballCount == 15:
        value = 8
    if 7 < ballCount < 15:
        value = ballCount - 7
    if ballCount == 7:
        value = 4
    if 3 < ballCount < 7:
        value = ballCount - 3
    if ballCount == 3:
        value = 2
    if 1 < ballCount < 3:
        value = 1

    return value

main()
